<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Update Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">
                Update Nominal "<%= nominal.coinName %>"
              </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form
              action="/nominal/edit/<%= nominal._id %>?_method=PUT"
              method="post"
            >
              <div class="card-body">
                <div class="form-group">
                  <label for="coinName">Name of V-Cash</label>
                  <select
                    id="coinName"
                    class="form-control select2"
                    style="width: 100%"
                    name="coinName"
                    required
                  >
                    <option selected="selected">Pilih Jenis</option>
                    <option value="Gold" 
                    <% if(nominal.coinName === "Gold"){ %>
                      selected
                    <% } %>
                    >Gold</option>
                    <option value="Diamond" <% if(nominal.coinName === "Diamond"){ %>
                      selected
                    <% } %>>Diamond</option>
                    <option value="Gems" <% if(nominal.coinName === "Gems"){ %>
                      selected
                    <% } %>>Gems</option>
                    <option value="Coin" <% if(nominal.coinName === "Coin"){ %>
                      selected
                    <% } %>>Coin</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQty">Amount of V-Cash</label>
                  <input
                    type="number"
                    class="form-control"
                    id="coinQty"
                    placeholder="Enter your Amount of V-Cash..."
                    required
                    name="coinQty"
                    value="<%= nominal.coinQty %>"
                  />
                </div>
                <div class="form-group">
                  <label for="coinPrice">Price</label>
                  <input
                    type="number"
                    class="form-control"
                    id="coinPrice"
                    placeholder="Enter your Price of V-Cash..."
                    required
                    name="coinPrice"
                    value="<%= nominal.coinPrice %>"
                  />
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>

          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
