<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Nama Game</th>
      <th>Item</th>
      <th>Total Harga</th>
      <th>Status</th>
      <th>Player Name</th>
      <th>Action(s)</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0;i < transaction.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td>
        <ul class="list-inline">
          <li class="list-inline-item">
            <img
              src="http://localhost:3000/upload/<%= transaction.[i].historyVoucherTopUp.thumbnail %>"
              alt="thumbnail"
            />
          </li>
        </ul>
        <%= transaction.[i]?.historyVoucherTopUp?.gameName %>
        <br />
        <%= transaction.[i]?.historyVoucherTopUp?.category %>
      </td>
      <td>
        <%= transaction.[i]?.historyVoucherTopUp?.coinName %><%=
        transaction.[i]?.historyVoucherTopUp?.coinQty %>
      </td>
      <td>
        <% if(transaction[i].status === 'pending'){ %>
        <span class="badge badge-success"> Active </span>
        <% }else{ %>
        <span class="badge badge-danger"> Not Active </span>
        <%} %>
      </td>
      <td>
        <form
          action="/transaction/status/<%= transaction[i]._id %>?_method=PUT"
          style="display: inline-block"
          method="post"
        >
          <button class="btn btn-primary btn-sm">
            <i class="fas fa-folder"
              ><% if(transaction[i].status === 'Y'){ %> Deactive <% }else{ %>
              Active <%} %></i
            >
          </button>
        </form>
        <form
          style="display: inline-block"
          action="/transaction/delete/<%= transaction[i]._id %>?_method=DELETE"
          method="post"
        >
          <a
            href="/transaction/edit/<%= transaction[i]._id %>"
            class="btn btn-info btn-sm"
            ><i class="fas fa-pencil-alt mr-2"></i>Ubah</a
          >
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash mr-2"></i>Hapus
          </button>
        </form>
      </td>
    </tr>
    <% }%>
  </tbody>
</table>
