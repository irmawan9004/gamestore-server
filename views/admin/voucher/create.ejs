<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Create Voucher</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/voucher">Voucher</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- /.card-header -->

            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Create Voucher</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form
                action="/voucher/create"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="card-body">
                  <div class="form-group">
                    <label for="coinQty">Game Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="coinQty"
                      placeholder="Enter your Amount of V-Cash..."
                      required
                      name="name"
                    />
                  </div>
                  <div class="form-group">
                    <label for="category">Game Category</label>
                    <select
                      id="category"
                      class="form-control select2"
                      style="width: 100%"
                      name="category"
                      data-placeholder="Pilih Jenis Category"
                      required
                    >
                      <option selected="selected">Pilih Game</option>
                      <% category.forEach(category =>{ %>
                      <option value="<%= category._id %>">
                        <%= category.name %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="nominal">Game Nominal</label>
                    <div class="select2-purple">
                      <select
                        id="nominals"
                        class="form-control select2"
                        style="width: 100%"
                        name="nominal"
                        data-placeholder="Pilih Nominal"
                        multiple="multiple"
                        required
                      >
                        <% nominal.forEach(nominal =>{ %>
                        <option value="<%= nominal._id %>">
                          <%= nominal.coinName %> <%= nominal.coinPrice%>
                        </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="image">Add Image</label>
                    <input
                      type="file"
                      name="image"
                      class="form-control"
                      id="image"
                      placeholder="Msukkan Gambar"
                    />
                    <br />
                    <img src="" id="perview" />
                  </div>
                </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>

            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>

<script>
  function readUrl(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();
      reader.onload = function (e) {
        $("#perview").attr("src", e.target.result);
        $("#perview").attr("width", "20%");
        $("#perview").attr("height", "20%");
      };

      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#image").change(function () {
    readUrl(this);
  });
</script>
