<%- include ../../partials/header.ejs %> <%- include ../../partials/navbar.ejs
%> <%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Update Payment</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
            <li class="breadcrumb-item active">Update</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <!-- /.card-header -->

            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Update Payment</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form
                action="/payment/edit/<%= payment._id %>?_method=PUT"
                method="post"
              >
                <div class="card-body">
                  <div class="form-group">
                    <label for="type">Type</label>
                    <input
                      type="text"
                      class="form-control"
                      id="type"
                      placeholder="Enter your Amount of V-Cash..."
                      required
                      value="<%= payment.type %>"
                      name="type"
                    />
                  </div>
                  <div class="form-group">
                    <label for="banks">Banks</label>
                    <div class="select2-purple">
                      <select
                        id="banks"
                        class="form-control select2"
                        style="width: 100%"
                        name="banks"
                        data-placeholder="Pilih Nominal"
                        multiple="multiple"
                        required
                      >
                        <% bank.forEach(bank =>{ %>
                          <option value="<%= bank._id %>" <% payment.banks.forEach(Banks =>{ %>
                            <% if(bank._id.toString() === Banks._id.toString()){ %>
                              selected
                            <% } %>
                            <% }) %> 
                            > 
                            <%= bank.name %>-<%= bank.bankName %>-<%= bank.accountNumber %>
                          </option>
                        <% }) %>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>
            </div>

            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>

<script>
  function readUrl(input) {
    if (input.files && input.files[0]) {
      const reader = new FileReader();
      reader.onload = function (e) {
        $("#perview").attr("src", e.target.result);
        $("#perview").attr("width", "20%");
        $("#perview").attr("height", "20%");
      };

      reader.readAsDataURL(input.files[0]);
    }
  }

  $("#image").change(function () {
    readUrl(this);
  });
</script>
